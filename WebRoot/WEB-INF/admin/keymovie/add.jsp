<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%><%@ taglib prefix="sp" uri="http://mos.xinfan.com/"%><%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%><!DOCTYPE html><html lang="en"><head>      <jsp:include page="../head.jsp"></jsp:include><script type="text/javascript" src="${pageContext.request.contextPath}/jslib/uiadmin/lib/My97DatePicker/WdatePicker.js"></script><script type="text/javascript" src="${pageContext.request.contextPath}/jslib/uiadmin/lib/datatables/1.10.0/jquery.dataTables.min.js"></script></head><body><nav class="breadcrumb"><i class="Hui-iconfont"></i>  <span class="c-gray en"></span><a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a></nav><div class="pd-20">	<div class="text-c"> 电影名称：		<input type="text" class="input-text" style="width:250px" placeholder="输入电影名称" id="name" name="name">		<button type="submit" class="btn btn-success radius" id="btn_search" name="" ><i class="Hui-iconfont">&#xe665;</i> 搜索</button>	</div>	<div class="mt-20">	<table class="table table-border table-bordered table-hover table-bg table-sort">		<thead>			<tr class="text-c">                 <th>片源ID</th>                 <th>电影名称</th>                 <th>介绍</th>                 <th>类型</th>                 <th>导演</th>                 <th>主演</th>                 <th>国家</th>                 <th>发布时间</th>                 <th>操作</th>             </tr>		</thead>		<tbody>	                                    			</tbody>	</table>	</div></div><script type="text/javascript">var datatable = null;$(function(){	datatable = $('.table-sort').dataTable({		"bStateSave": true,//状态保存         responsive: true,        "searching": false,        "processing": true,        "serverSide": true,        "ordering": false,        "bLengthChange": false,        "info":     false,        "paging":   true,        "ajax": {        	"url":"${pageContext.request.contextPath}/admin/film/page.jspx",        	"type":"post",        	"data":function(d){        		getParamter(d);       		 }		},        "columnDefs": [                       {                           "render": function ( data, type, row ) {                        	   var array = new Array();                        	   array.push('<a title="添加" onclick="movie_add(this,'+row[0]+')" href="javascript:;"  class="ml-5" style="text-decoration:none">添加</a>');                               return array.join("");                           },                           "targets": 8                       } , {                            "render": function ( data, type, row ) {                 				if(data!=null){                 					return new Date(data).formatShort();                 				}                          },                          "targets": 7                	                      	                         } , {                           "render": function ( data, type, row ) {                        	  if(data == 1){                       		   return '内地';                       	   }else if(data == 2){                       		   return '香港';                       	   }else if(data == 3){                       		   return '台湾';                       	   }else if(data == 4){                       		   return '美国';                       	   }else if(data == 5){                       		   return '欧洲';                       	   }else if(data == 6){                       		   return '日本';                       	   }else if(data == 7){                       		   return '韩国';                       	   }                        },                        "targets": 6                	                    	                       }, {                         "render": function ( data, type, row ) {                        	if(data == 1){                      		   return '喜剧';                      	   }else if(data == 2){                      		   return '动作';                      	   }else if(data == 3){                      		   return '冒险';                      	   }else if(data == 4){                      		   return '悬念';                      	   }else if(data == 5){                      		   return '惊悚';                      	   }else if(data == 6){                      		   return '记录';                      	   }else if(data == 7){                      		   return '战争';                      	   }else if(data == 8){                      		   return '爱情';                      	   }else if(data == 9){                      		   return '剧情';                      	   }else if(data == 10){                      		   return '恐怖';                      	   }else if(data == 11){                      		   return '科幻';                      	   }else if(data == 12){                      		   return '综艺';                      	   }else if(data == 13){                      		   return '动漫';                      	   }else if(data == 14){                      		   return '其他';                      	   }                      },                      "targets": 3               	                  	                     }                 ]	});			$("#btn_search").click(function(){		reload();	});	});	function reload(){	 datatable.fnClearTable(0);       datatable.fnDraw(); //重新加载数据 }var notin = "${notin}";function getParamter(data){	var name = $("#name").val();		data['name']=name;	data['notin']=notin;}function movie_add(obj,id){	layer.confirm('确认要添加吗？',function(index){		  var _data = {"filmId": id};	      $.ajax({type:"POST",	             url:"${pageContext.request.contextPath}/admin/keymovie/add-save.jspx?t="+new Date().getTime(),	             data:_data,	             dataType:"json",	             success:function(data){	            	if(data.result ==0){	            		layer.msg('已添加!',{icon:1,time:1000});	            		notin += ",";	            		notin += id;	            		reload();	            	}	            	else{	            		layer.msg(data.message,{icon:1,time:1000});	            	}	             }			});		});}</script></body></html>