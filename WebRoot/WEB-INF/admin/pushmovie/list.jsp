<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%><%@ taglib prefix="sp" uri="http://mos.xinfan.com/"%><%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%><!DOCTYPE html><html lang="en"><head>      <jsp:include page="../head.jsp"></jsp:include><script type="text/javascript" src="${pageContext.request.contextPath}/jslib/uiadmin/lib/My97DatePicker/WdatePicker.js"></script><script type="text/javascript" src="${pageContext.request.contextPath}/jslib/uiadmin/lib/datatables/1.10.0/jquery.dataTables.min.js"></script></head><body><nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span>推送管理<span class="c-gray en">&gt;</span>推送计划 <a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a></nav><div class="pd-20">	<div class="text-c" style="width: 600px;">		<table >			<tr>				<td>描述：</td>				<td><input type="text" class="input-text" style="width:250px" placeholder="输入描述" id="instruction" name="instruction"></td>				<td><button type="submit" class="btn btn-success radius" id="btn_search" name="" ><i class="Hui-iconfont">&#xe665;</i> 搜索</button></td>			</tr>		</table>					</div>	<div class="cl pd-5 bg-1 bk-gray mt-20"> <span class="l"><a class="btn btn-primary radius" onclick="addpush()" href="javascript:;"><i class="Hui-iconfont">&#xe600;</i> 添加计划</a></span> </div>	<div class="mt-20">	<table class="table table-border table-bordered table-hover table-bg table-sort">		<thead>			<tr class="text-c">                 <th>推送ID</th>                 <th>描述</th>                 <th>创建时间</th>                 <th>推送状态</th>                 <th>操作</th>             </tr>		</thead>		<tbody>	                                    			</tbody>	</table>	</div></div><script type="text/javascript">var datatable = null;$(function(){	datatable = $('.table-sort').dataTable({		"bStateSave": true,//状态保存         responsive: true,        "searching": false,        "processing": true,        "serverSide": true,        "ordering": false,        "bLengthChange": false,        "info":     false,        "paging":   true,        "ajax": {        	"url":"${pageContext.request.contextPath}/admin/push/page.jspx",        	"type":"post",        	"data":function(d){        		getParamter(d);       		 }		},        "columnDefs": [                       {                           "render": function ( data, type, row ) {                        	   var array = new Array();                        	   array.push('<a title="查看" onclick="movie_see(this,'+row[0]+')" href="javascript:;"  class="ml-5" style="text-decoration:none">查看</a>');                        	   array.push('<a title="删除" onclick="push_delete(this,'+row[0]+')" href="javascript:;"  class="ml-5" style="text-decoration:none">删除</a>');                        	   array.push('<a title="微信推送" onclick="push(this,'+row[0]+')" href="javascript:;"  class="ml-5" style="text-decoration:none">微信推送</a>');                               return array.join("");                           },                           "targets": 4                       }, {                            "render": function ( data, type, row ) {                         	  if(data == 0){                        		   return '未推送';                        	   }else if(data == 1){                        		   return '已推送';                        	   }                         },                         "targets":3               	                     	                        },{                          "render": function ( data, type, row ) {              				if(data!=null){              					return new Date(data).formatShort();              				}                       },                       "targets": 2                	                   	                      }                                        ]	});			$("#btn_search").click(function(){		reload();	});	});	function reload(){	 datatable.fnClearTable(0);       datatable.fnDraw(); //重新加载数据 }function getParamter(data){	var instruction = $("#instruction").val();	data['instruction']=instruction;}function movie_see(obj,id){	var index = layer.open({		type: 2,		title: '计划推送电影列表',		content: '${pageContext.request.contextPath}/admin/push/movie/list.jspx?push_id=' + id	});	layer.full(index);}function addpush(){	var index = layer.open({		type: 2,		title: '添加推送计划',		content: '${pageContext.request.contextPath}/admin/push/add.jspx'	});	layer.full(index);}/*删除*/function push_delete(obj,id){	layer.confirm('确认要删除吗？',function(index){	  var _data = {"pushId": id};      $.ajax({type:"POST",             url:"${pageContext.request.contextPath}/admin/push/delete.jspx?t="+new Date().getTime(),             data:_data,             dataType:"json",             success:function(data){            	if(data.result ==0){            		layer.msg('已删除!',{icon:1,time:1000});            		reload();            	}            	else{            		layer.msg(data.message,{icon:1,time:1000});            	}             }		});	});}/*推送*/function push(obj,id){	layer.confirm('确认要立即推送吗？',function(index){	  var _data = {"pushId": id};      $.ajax({type:"POST",             url:"${pageContext.request.contextPath}/admin/push/push.jspx?t="+new Date().getTime(),             data:_data,             dataType:"json",             success:function(data){            	if(data.result ==0){            		layer.msg('已推送!',{icon:1,time:1000});            		reload();            	}            	else{            		layer.msg(data.message,{icon:1,time:1000});            	}             }		});	});}</script></body></html>